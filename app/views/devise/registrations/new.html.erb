<div class="col-md-6 col-md-offset-3">
<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Registrate</h2>
    </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="panel-body">
  <div class="form-group">
    <%= f.label "Nombre" %><br />
    <%= f.text_field :name, autofocus: true , required: true, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label "Apellido paterno" %><br />
    <%= f.text_field :paterno, autofocus: true , required: true, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label "Apellido materno" %><br />
    <%= f.text_field :materno, autofocus: true , required: true, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label "Fecha de nacimiento" %><br />
    <%= f.date_select :edad,:start_year=>1996,:end_year=>2005%>
  </div>

  <div class="form-group">
    <%= f.label "Escuela" %><br />
    <%= f.text_field :escuela, autofocus: true , required: true, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label "Grado escolar" %><br />
    <%= f.radio_button :grado, "1" , checked: true%> 1ro de Secundaria<br>
    <%= f.radio_button :grado, "2" %> 2ndo de Secundaria<br>
    <%= f.radio_button :grado, "3" %> 3ro de Secundaria<br>
    <%= f.radio_button :grado, "4" %> 1ro de Preparatoria<br>
    <%= f.radio_button :grado, "5" %> 2ndo de Preparatoria<br>
    <%= f.radio_button :grado, "6" %> 3ro de Preparatoria<br>
  </div>

  <div class="form-group">
    <%= f.label "Correo Electronico" %><br />
    <%= f.email_field :email, autofocus: true , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label "Confirmar contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
  </div>
<br>
  <div class="form-group">
    <%= f.submit "Registrar", class: "btn btn-default" %>
  </div>

    </div>
<% end %>


</div>
</div>
</div>
