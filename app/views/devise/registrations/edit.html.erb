<h2>Editar Usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "Nombre" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "Apellido paterno" %><br />
    <%= f.text_field :paterno, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "Apellido materno" %><br />
    <%= f.text_field :materno, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "Fecha de nacimiento" %><br />
    <%= f.date_select :edad %>
  </div>

  <div class="field">
    <%= f.label "Escuela" %><br />
    <%= f.text_field :escuela, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "Correo Electronico" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Contraseña" %> <i>(Dejala en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Confirmar Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Contraseña actual" %> <i>(Necesitamos tu contraseña actual para realizar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Aceptar" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>¿No estas feliz? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
