<% if @opc %>
<% controller.redirect_to root_path %>
<% else %>
<div class="panel panel-default">
<p>
  Choose the three most familiar concepts to you.
</p>
<%= form_tag({controller: "quiz", action: "rc2"}) do |f| %>
<p>
  <% @respuestas.each do |respuesta| %>
  <%= check_box_tag  "product[id][]",@respuestas.index(respuesta) %>
  <%= respuesta %>
  <br>
  <% end %>

<%= submit_tag("Siguiente", :class => "btn btn-default") %>
</p>
</div>
<% end %>

<% end %>

<script>
$('input[type=checkbox]').change(function(e){
   if ($('input[type=checkbox]:checked').length > 3) {
        $(this).prop('checked', false)
   }
})
</script>
